
@{
    ViewData["Title"] = "Book List";
}

<br />


    <div class="col-12" style="text-align:center">
        <div class="col-3">
            <a asp-action="Create" asp-controller="Books"  class="btn btn-info form-control text-white">Create New Book</a>
        </div>
   

    <div class="col-12 border p-3">
        <table id="DT-load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Rating</th>
                    <th></th>

                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/BookList.js"></script>
}






